<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="https://www.sitemaps.org/schemas/sitemap/0.9">
    {% for location in locations %}
    <url>
        <loc>{{ url('home') | https }}{{ location | url | slice(1) }}</loc>
        {% if location.updatedAt is defined %}
          <lastmod>{{location.updatedAt}}</lastmod>
        {% endif %}
    </url>
    {% endfor %}
</urlset>
